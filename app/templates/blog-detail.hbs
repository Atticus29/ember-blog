<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>{{model.title}}</h1>
        <h3>{{model.date}}</h3>
        <h3>By: {{model.author}}</h3>
      </div>
      <div class="panel-body">
        <img src={{model.image}} alt="stock photo" class="full-detail-image">
        <p>
          {{model.Body}}
        </p>
      </div>
      <div class="panel-footer">
        <h4>Comments:</h4>
        {{#each model.comments as |comment|}}
          {{comment-section comment=comment destroyComment="destroyComment" updateComment="updateComment"}}
        {{/each}}
      </div>
    </div>
    {{new-comment blog=model saveComment='saveComment'}}
  </div>
</div>
