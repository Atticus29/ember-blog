{{#if updateEntryForm}}
  <h4>Update {{blog.title}}</h4>
  <form>
    <div class="form-group">
      <label for="title">Title:</label>
      {{input value=title id="title" placeholder=blog.title}}
    </div>
    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author id="author" placeholder=blog.author}}
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      {{input value=date id="date" placeholder=blog.date}}
    </div>
    <div class="form-group">
      <label for="image">Image:</label>
      {{input value=image id="image" placeholder=blog.image}}
    </div>
    <div class="tags">
      <label for="tags">Tags:</label><br>
      <input type="checkbox" name="life" checked={{blog.life}}>Life<br>
      <input type="checkbox" name="career" checked={{blog.career}}>Career<br>
      <input type="checkbox" name="entertainment" checked={{blog.entertainment}}>Entertainment<br>
      <input type="checkbox" name="hobbies" checked={{blog.hobbies}}>Hobbies<br>
    </div>
    <button {{action 'update' blog}} class="btn btn-success">Save</button>
    <button {{action 'cancel'}} class="btn btn-primary">Cancel</button>
  </form>
{{else}}
<button {{action 'updateEntryForm'}} class="btn btn-primary">Update</button>
{{/if}}
