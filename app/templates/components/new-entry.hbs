<div class="panel panel-default">
  <div class="panel panel-heading">
    <h3>New Blog Entry</h3>
  </div>
  <div class="panel panel-body">
    <form>
      <div class="form-group">
        <label for="title">Title:</label>
        {{input value=title id="title"}}
        <!-- <input type="text" name="title" > -->
      </div>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="date">Date:</label>
        {{input value=date id="date"}}
      </div>
      <div class="form-group">
        <label for="body">Body:</label>
        {{input value=body id="body"}}
      </div>
      <div class="form-group">
        <label for="image">Image:</label>
        {{input value=image id="image"}}
      </div>
      <div class="tags">
        <label for="tags">Tags:</label><br>
        {{input type="checkbox" name="life" checked=lifeChecked}} Life <br>
        {{input type="checkbox" name="career" checked=careerChecked}} Career <br>
        {{input type="checkbox" name="entertainment" checked=entertainmentChecked}} Entertainment <br>
        {{input type="checkbox" name="hobbies" checked=hobbiesChecked}} Hobbies <br>
      </div>
      <div class="dailyStory">
        <label for="dialyStory">DailyStory:</label><br>
        {{input type="checkbox" name="dailyStory" checked=dailyStoryChecked}}
      </div>
      <button {{action 'save'}} class="btn btn-success">Create</button>
      <button {{action 'cancel'}} class="btn btn-primary">Cancel</button>
    </form>
  </div>
</div>
